<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ln_ad"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:columnCount="2"
            android:orientation="horizontal"
            android:useDefaultMargins="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:gravity="fill_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Computer"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Me"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:gravity="fill_horizontal"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding_45"
                android:paddingEnd="@dimen/padding_45">

                <TextView
                    android:id="@+id/displayScoreAndroid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_primary"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txt_22"
                    android:textStyle="bold"
                    tools:text="1" />

                <TextView
                    android:id="@+id/displayScoreMe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_weight="1"
                    android:background="@drawable/bt_primary"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txt_22"
                    android:textStyle="bold"
                    tools:text="2" />

            </LinearLayout>

        </GridLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin_5"
            android:layout_weight="5"
            ads:cardBackgroundColor="@color/whiteSmoke"
            app:cardCornerRadius="@dimen/round_25"
            app:cardElevation="@dimen/w_3"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/entry1"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        tools:text="1" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/entry2"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        tools:text="2" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/entry3"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        tools:text="3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/entry4"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/separation_top_left_margin"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        tools:text="4" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/entry5"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/separation_top_left_margin"
                        android:layout_marginTop="@dimen/separation_top_left_margin"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        tools:text="5" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/entry6"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/separation_top_left_margin"
                        android:layout_marginTop="@dimen/separation_top_left_margin"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        tools:text="6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/entry7"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/separation_top_left_margin"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        tools:text="7" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/entry8"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/separation_top_left_margin"
                        android:layout_marginTop="@dimen/separation_top_left_margin"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        tools:text="8" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/entry9"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/separation_top_left_margin"
                        android:layout_marginTop="@dimen/separation_top_left_margin"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        tools:text="9" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bt_primary"
                android:onClick="newGame"
                android:padding="4dp"
                android:paddingStart="@dimen/padding_45"
                android:paddingEnd="@dimen/padding_45"
                android:text="RESTART"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_22"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/str_b" />
    </LinearLayout>
</RelativeLayout>
